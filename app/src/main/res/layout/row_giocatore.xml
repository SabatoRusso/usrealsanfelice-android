<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:orientation="horizontal"

    >


    <ImageView
        android:id="@+id/avatarGiocatore"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/homelogo"
        android:scaleType="fitCenter" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        >

        <TextView
            android:id="@+id/nomeGiocatore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="Nome Utente"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/ruoloGiocatore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="Portiere"

            android:textColor="#9b9797"
            android:textSize="12sp"
            android:textAllCaps="false" />
    </LinearLayout>



    <TextView
        android:id="@+id/numeroMaglia"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="1"
        android:gravity="center"
        android:background="@drawable/gradienthome"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:textAlignment="center" />






</LinearLayout>
