<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingTop="10dp"
android:paddingBottom="10dp"
android:orientation="horizontal"
android:id="@+id/row_squadra"


    >



<TextView
    android:id="@+id/posizioneClassifica"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:gravity="center"
    android:text="1"
    android:textColor="@android:color/white"
    android:textSize="14sp"
    android:textAllCaps="false" />



<ImageView

    android:id="@+id/scudettoSquadra"
    android:layout_width="25dp"
    android:layout_gravity="center"
    android:layout_height="25dp"
    android:src="@drawable/scudetto_vuoto"
    android:scaleType="fitCenter" />


<TextView
    android:id="@+id/nomeSquadra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_vertical"
    android:layout_weight="1"
    android:paddingLeft="10dp"
    android:text="Nome Utente"
    android:textColor="@android:color/white"
    android:textSize="14sp"
    android:textAllCaps="false" />


<TextView
    android:id="@+id/punti"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_gravity="center"
    android:text="1"
    android:layout_marginRight="5dp"
    android:gravity="center"
    android:background="@drawable/gradienthome"
    android:textColor="@color/colorPrimary"
    android:textSize="12sp"
    android:textAllCaps="false"
    android:textAlignment="center" />






</LinearLayout>
